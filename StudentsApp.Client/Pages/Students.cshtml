@using StudentsApp.Shared.Models
@page "/students"
@inject HttpClient Http

<h1>All students</h1>


@if (students == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Faculty</th>
                <th>Age</th>
                <th>Info</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in students)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Faculty</td>
                    <td>@student.Age</td>
                    <td><p><a href="/studentInf/@student.Id">Info</a></p></td>
                </tr>
            }
        </tbody>
    </table>
}

@functions {
    List<Student> students;

    protected override async Task OnInitAsync()
    {
        students = await Http.GetJsonAsync<List<Student>>("api/Student/Students");
    }
}
