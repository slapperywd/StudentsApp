@using StudentsApp.Shared.Models
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Name:</label>
                        <input type="text" class="form-control" bind="Student.Name"/>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Age:</label>
                        <input type="text" class="form-control" bind="Student.Age"/>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Faculty:</label>
                        <input type="text" class="form-control" bind="Student.Faculty"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="@CreateStudent">Save changes</button>
            </div>
        </div>
    </div>
</div>

@functions {
    Student Student { get; set; } = new Student();

    [Parameter]
    Action<Student, Student> OnStudentCreate { get; set; }

    void CreateStudent()
    {
        OnStudentCreate(Student, Student);
    }
}
